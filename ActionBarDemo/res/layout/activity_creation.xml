<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pmalviya.actionbardemo.CreationActivity" >
 <TextView
        android:id="@+id/etExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Expense Amount"
        android:inputType="numberDecimal"
        android:text="TextView" />
	<requestFocus/>

    <TextView
        android:id="@+id/etExpenseNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etExpense"
        android:layout_alignRight="@+id/etExpense"
        android:layout_below="@+id/etExpense"
        android:layout_marginTop="24dp"
        android:hint="Note"
        android:inputType="textMultiLine"
        android:text="TextView" />

    <TextView
        android:id="@+id/etWho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etExpenseNote"
        android:layout_below="@+id/etExpenseNote"
        android:layout_marginTop="23dp"
        android:hint="&quot;Who&quot;"
        android:inputType="textShortMessage"
        android:text="TextView" />

</RelativeLayout>
